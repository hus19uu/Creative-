            alt="ألم يرموا أوراقهم الرابحة بعد؟" 
            class="w-full h-auto object-cover block"
        >

        <!-- الغطاء الشفاف للنص، يغطي الجزء السفلي فقط -->
        <div class="absolute inset-x-0 bottom-0 h-2/3 bg-gradient-to-t from-black via-black/80 to-transparent"></div>

        <!-- حاوية العداد التنازلي -->
        <div id="countdown-container" class="absolute inset-0 flex flex-col justify-end p-6">
            <!-- العداد -->
            <div id="timer-wrapper" class="text-center w-full">
                 <h2 id="main-title" class="text-amber-100/80 text-lg md:text-xl font-bold mb-4" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.9);">الورقة الأخيرة على وشك أن تُكشف...</h2>
                <div id="timer" class="flex justify-center items-end space-x-2 md:space-x-3">
                    <div class="text-center"><div id="days" class="timer-font text-3xl md:text-5xl font-bold text-slate-200">00</div><div class="text-xs text-slate-400">أيام</div></div>
                    <div class="text-2xl md:text-4xl font-bold pb-1 text-slate-600">:</div>
                    <div class="text-center"><div id="hours" class="timer-font text-3xl md:text-5xl font-bold text-slate-200">00</div><div class="text-xs text-slate-400">ساعات</div></div>
                    <div class="text-2xl md:text-4xl font-bold pb-1 text-slate-600">:</div>
                    <div class="text-center"><div id="minutes" class="timer-font text-3xl md:text-5xl font-bold text-slate-200">00</div><div class="text-xs text-slate-400">دقائق</div></div>
                    <div class="text-2xl md:text-4xl font-bold pb-1 text-slate-600">:</div>
                    <div class="text-center"><div id="seconds" class="timer-font text-3xl md:text-5xl font-bold text-amber-600 heartbeat">00</div><div class="text-xs text-slate-400">ثواني</div></div>
                </div>
            </div>

            <!-- حاوية الكشف النهائي (مخفية) -->
            <div id="reveal-container" class="hidden text-center w-full">
                <div class="text-xl md:text-2xl font-black text-amber-200 p-4" style="text-shadow: 1px 1px 10px #ca8a04;">
                    كُشِفت الورقة: عامٌ جديد... وفصلٌ جديد.
                </div>
            </div>
        </div>
    </div>

    <script>
        // --- إعدادات العداد التنازلي ---
        // التاريخ المستهدف: 1 محرم 1447 هـ (الموافق 28 يونيو 2025 ميلادي)
        const countdownDate = new Date("2025-06-28T00:00:00").getTime();

        // الحصول على عناصر العرض من الصفحة
        const elements = {
            days: document.getElementById('days'),
            hours: document.getElementById('hours'),
            minutes: document.getElementById('minutes'),
            seconds: document.getElementById('seconds'),
            timerWrapper: document.getElementById('timer-wrapper'),
            revealContainer: document.getElementById('reveal-container'),
            title: document.getElementById('main-title'),
        };

        function updateClock() {
            const now = new Date().getTime();
            const distance = countdownDate - now;

            // إذا انتهى الوقت
            if (distance < 0) {
                clearInterval(interval);
                // إخفاء العداد والعنوان
                elements.timerWrapper.style.display = 'none';
                elements.title.style.display = 'none';
                // إظهار رسالة الكشف النهائية
                elements.revealContainer.classList.remove('hidden');
                return;
            }

            // حساب الوقت المتبقي
            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            // عرض النتيجة في الصفحة
            elements.days.innerText = String(days).padStart(2, '0');
            elements.hours.innerText = String(hours).padStart(2, '0');
            elements.minutes.innerText = String(minutes).padStart(2, '0');
            elements.seconds.innerText = String(seconds).padStart(2, '0');
        }

        // تشغيل الساعة كل ثانية
        const interval = setInterval(updateClock, 1000);
        
        // تحديث الساعة فوراً عند تحميل الصفحة لمنع ظهور أرقام خاطئة للحظة
        updateClock();
    </script>

</body>
