            onerror="this.onerror=null; this.src='https://placehold.co/600x400/1e293b/94a3b8?text=Error+Loading+Image'; this.alt='فشل تحميل الصورة';"
        >

        <!-- حاوية العداد التنازلي بتصميم جديد -->
        <div id="countdown-container" class="absolute inset-0 flex flex-col justify-end p-6 bg-gradient-to-t from-black via-black/80 to-transparent">
            <div class="text-center w-full">
                <h2 id="main-title" class="text-amber-100/90 text-xl md:text-2xl font-black mb-4" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">الورقة الأخيرة على وشك أن تُكشف...</h2>
                <div id="timer" class="flex justify-center items-end space-x-2 md:space-x-4">
                    <!-- الأيام -->
                    <div class="text-center">
                        <div id="days" class="timer-font text-3xl md:text-5xl font-bold text-slate-300">00</div>
                        <div class="text-xs md:text-sm text-slate-500">أيام</div>
                    </div>
                    <div class="timer-font text-2xl md:text-4xl font-bold pb-1 text-slate-700">:</div>
                    <!-- الساعات -->
                    <div class="text-center">
                        <div id="hours" class="timer-font text-3xl md:text-5xl font-bold text-slate-300">00</div>
                        <div class="text-xs md:text-sm text-slate-500">ساعات</div>
                    </div>
                     <div class="timer-font text-2xl md:text-4xl font-bold pb-1 text-slate-700">:</div>
                    <!-- الدقائق -->
                    <div class="text-center">
                        <div id="minutes" class="timer-font text-3xl md:text-5xl font-bold text-slate-300">00</div>
                        <div class="text-xs md:text-sm text-slate-500">دقائق</div>
                    </div>
                     <div class="timer-font text-2xl md:text-4xl font-bold pb-1 text-slate-700">:</div>
                    <!-- الثواني -->
                    <div class="text-center">
                        <div id="seconds" class="timer-font text-3xl md:text-5xl font-bold text-amber-600 heartbeat">00</div>
                        <div class="text-xs md:text-sm text-slate-500">ثواني</div>
                    </div>
                </div>
            </div>
